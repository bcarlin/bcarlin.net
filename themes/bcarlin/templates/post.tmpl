## -*- coding: utf-8 -*-
<%namespace name="helper" file="post_helper.tmpl"/>
<%namespace name="pheader" file="post_header.tmpl"/>
<%namespace name="comments" file="comments_helper.tmpl"/>
<%inherit file="base.tmpl"/>
<%block name="extra_head">
  % if post.meta('keywords'):
  <meta name="keywords" content="${post.meta('keywords')|h}">
  % endif
  %if post.description():
  <meta name="description" itemprop="description" content="${post.description()}">
  %endif
  <meta name="author" content="${post.author()}">
  %if post.prev_post:
      <link rel="prev" href="${post.prev_post.permalink()}" title="${post.prev_post.title()|h}" type="text/html">
  %endif
  %if post.next_post:
      <link rel="next" href="${post.next_post.permalink()}" title="${post.next_post.title()|h}" type="text/html">
  %endif
  % if post.is_draft:
      <meta name="robots" content="noindex">
  % endif
  ${helper.twitter_card_information(post)}
  ${helper.open_graph_metadata(post)}
  ${helper.meta_translations(post)}
</%block>
<%block name="content">
  <article class="postbox post-${post.meta('type')} h-entry"
           itemscope="itemscope" itemtype="http://schema.org/Article">
    <header>
      ${pheader.html_title()}
      <aside>
          <time class="published dt-published" datetime="${post.date.isoformat()}" itemprop="datePublished">
            ${post.formatted_date(date_format)}
          </time>
          ##${helper.html_translations(post)}
          ##${helper.html_tags(post)}
          <span class="sep">//</span>
          <a rel="license"
             href="http://creativecommons.org/licenses/by/3.0/fr/">
            <span class="custom-icon">CC</span>
            <span class="custom-icon">BY</span>
          </a>
          <a style="display:none"
             xmlns:cc="http://creativecommons.org/ns#"
             href="http://bcarlin.net"
             property="cc:attributionName"
             rel="cc:attributionURL">
            Bruno Carlin
          </a>
          % if not post.meta('password'):
          <span class="sep">//</span>
          <a href="${post.meta('slug')+'.rst'}" id="sourcelink">
            ${messages("Source")}
          </a>
          % endif
          <span class="sep">//</span>
          <span itemprop="keywords">
          %for tag in post.tags:
            <a class="tag p-category" href="${_link('tag', tag)}">
              <span class="label label-default">${tag}</span>
            </a>
          %endfor
          </span>
      </aside>
    </header>


    <div class="e-content" itemprop="articleBody text">
      ${post.text()}
    </div>
    %if post.description():
        <meta content="${post.description()}" itemprop="description">
    %endif

    ${helper.html_pager(post)}
    % if not post.meta('nocomments'):
        ${comments.comment_form(post.permalink(absolute=True), post.title(), post._base_path)}
    % endif
    ${helper.mathjax_script(post)}
  </article>
</%block>
