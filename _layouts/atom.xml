<?xml version="1.0"?>
{% if page.title %}
  {% capture title %}
    Bruno Carlin's Blog - {{page.title}}
  {% endcapture %}
{% else %}
  {% assign title = "Bruno Carlin's Blog" %}
{% endif %}
<feed xmlns="http://www.w3.org/2005/Atom">
 
  <title>{{title}}</title>
  <link href="http://aerdhyl.eu/blog/"/>
  <link type="application/atom+xml" rel="self" href="http://aerdhyl.eu{{page.url}}"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>http://aerdhyl.eu/blog/</id>
  <author>
    <name>Bruno Carlin</name>
    <email>self@aerdhyl.eu</email>
  </author>

  {{content}}

</feed>