<?xml version="1.0"?>
{% if page.title %}
  {% capture title %}
    Bruno Carlin's Blog - {{page.title}}
  {% endcapture %}
{% else %}
  {% assign title = "Bruno Carlin's Blog" %}
{% endif %}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{title}}</title>
    <link>http://aerdhyl.eu/blog/</link>
    <atom:link href="http://aerdhyl.eu{{page.url}}" rel="self" type="application/rss+xml" />
    <description>My thoughts, errands, discoveries, and stuffs.</description>
    <language>en-us</language>
    <lastBuildDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %z" }}</lastBuildDate>

    {{content}}

  </channel> 
</rss>