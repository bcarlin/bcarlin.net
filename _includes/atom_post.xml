<entry>
  <id>http://aerdhyl.eu{{ post.id }}</id>
  <link type="text/html" rel="alternate" href="http://aerdhyl.eu{{ post.url }}"/>
  <title>{{ post.title }}</title>
  <updated>{{ post.date | date_to_xmlschema }}</updated>
  <author>
    <name>Bruno Carlin</name>
    <uri>http://aerdhyl.eu/blog/</uri>
  </author>
  <content type="html">{{ post.content | xml_escape }}</content>
</entry>